{
  "manifest_version": 3,
  "name": "Modo Escuro Rápido",
  "description": "Uma extensão simples para ativar/desativar modo escuro em qualquer site",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ]
}